---
type Props = {
  position: 'bottom' | 'top';
};

const { position } = Astro.props;
---

<div
  class:list={{
    [`fixed -z-10 h-40 w-40 lg:w-72 lg:h-72 rounded-full blur-[150px] lg:blur-[350px] opacity-50`]: true,
    ['left-0 top-0 bg-accent-foreground']: position === 'top',
    ['right-0 bottom-0 bg-ring']: position === 'bottom',
  }}
>
</div>
