  {
    !isComingSoon && (
      <a
        class="group flex w-full cursor-pointer flex-col justify-between gap-4 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 md:flex-row md:items-center"
        href={link}
